// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String?  @unique
  username      String   @unique
  passwordHash  String?
  avatar        String?
  bio           String?
  
  // Auth providers
  steamId       String?  @unique
  epicId        String?  @unique
  
  // Profile stats
  reputation    Int      @default(0)
  tradesCount   Int      @default(0)
  
  // Relations
  listings      Listing[]
  trades        Trade[]  @relation("TradeBuyer")
  receivedTrades Trade[] @relation("TradeSeller")
  followers     Follow[] @relation("FollowFollower")
  following     Follow[] @relation("FollowFollowing")
  sentMessages  Message[] @relation("MessageSender")
  receivedMessages Message[] @relation("MessageReceiver")
  connectedAccounts ConnectedAccount[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@map("users")
}

model ConnectedAccount {
  id        String   @id @default(cuid())
  userId    String
  provider  String   // "steam" | "epic"
  providerId String
  accessToken String?
  refreshToken String?
  expiresAt   DateTime?
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([provider, providerId])
  @@map("connected_accounts")
}

model Listing {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  price       Decimal
  currency    String   @default("USD")
  
  // Item details
  platform    String   // "steam" | "epic" | "other"
  game        String?
  itemType    String   // "skin" | "inventory" | "other"
  itemId      String?
  
  // Status
  status      String   @default("active") // "active" | "sold" | "cancelled"
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  trades      Trade[]
  images      ListingImage[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("listings")
}

model ListingImage {
  id        String   @id @default(cuid())
  listingId String
  url       String
  order     Int      @default(0)
  
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@map("listing_images")
}

model Trade {
  id        String   @id @default(cuid())
  buyerId   String
  sellerId  String
  listingId String
  
  status    String   @default("pending") // "pending" | "completed" | "cancelled"
  price     Decimal
  currency  String   @default("USD")
  
  // Relations
  buyer     User     @relation("TradeBuyer", fields: [buyerId], references: [id])
  seller    User     @relation("TradeSeller", fields: [sellerId], references: [id])
  listing   Listing  @relation(fields: [listingId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("trades")
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  
  follower    User     @relation("FollowFollower", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("FollowFollowing", fields: [followingId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  
  @@unique([followerId, followingId])
  @@map("follows")
}

model Message {
  id        String   @id @default(cuid())
  senderId  String
  receiverId String
  content   String
  read      Boolean  @default(false)
  
  sender    User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver  User     @relation("MessageReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@map("messages")
}
